{
    "$schema": "http://json.schemastore.org/template",
    "author": "Lorenzo Delana",
    "classifications": [
        "AspNet",        
        "Serilog",
        "Lifetime",
        "Service",
        "Swagger",
        "Controller"        
    ],
    "identity": "SearchAThingTemplates.WebApi",
    "name": "Sample webapi",
    "shortName": "webapi-skel",
    "sourceName": "ExampleWebApi",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "symbols": {
